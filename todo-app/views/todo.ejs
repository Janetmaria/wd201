<!-- Overdue Section -->
<section>
  <h5>Overdue (<span id="count-overdue"><%= overdue.length %></span>)</h5>
  <table>
    <thead>
      <tr><th>Task</th><th>Due Date</th><th>Complete</th><th>Delete</th></tr>
    </thead>
    <tbody>
      <% overdue.forEach(todo => { %>
        <tr class="Todo-Item">
          <td><label for="todo-<%= todo.id %>"><%= todo.title %></label></td>
          <td><%= todo.dueDate %></td>
          <td>
            <input type="checkbox" id="todo-<%= todo.id %>" data-id="<%= todo.id %>"
              onchange="toggleCompletionStatus(<%= todo.id %>, this.checked)" />
          </td>
          <td>
            <form action="/todos/<%= todo.id %>?_method=DELETE" method="POST" style="display: inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="delete-todo" style="background: none; border: none; color: #007bff; cursor: pointer; text-decoration: underline; padding: 0; font: inherit;">
                Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

