

<section style="border: none; padding: 0;">
    <h5>Overdue</h5>
    <span id="count-overdue">(<%= overdue.length %>)</span>
<ul class="list-none">
  <% overdue.forEach(todo => { %>
    <li class="Todo-Item">
      <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-aqua-50">
        <input id="todo-overdue-<%= todo.id %>" type="checkbox" <%=todo.completed ? "checked" : "" %> onclick= "updateTodo(<%=todo.id %>)" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300"/>
        <label for="todo-overdue-<%= todo.id %>" class="ml-2 text-sm text-gray-600"><%= todo.title %></label>
        <a href="#" class="ml-2 trash-icon" onclick="deleteTodo(<%= todo.id %>)">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-red-500 hover:text-red-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 7V4a1 1 0 011-1h4a1 1 0 011 1v3m-7 0h8"/>
          </svg>
        </a>
      </div>
    </li>
  <% }) %>
</ul>
</section>

